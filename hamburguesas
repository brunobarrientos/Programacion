void main ()
{	
	float a[MAX], vegetales[MAX];
	int opcion0,contvege=0;
	cout <<"Bienvenido a Papi's Burger \n";
	cout <<"Usted puede armar su hamburguesa al gusto! o si gusta elegir de nuestro menu:\n";
	cout <<"1. Armar mi Hamburguesa \n";
	cout <<"2. Elegir del menu \n";
	cin>>opcion0;
			while(opcion0<0||opcion0>2)
			{	 cout<<"Ingrese un numero valido del menu o ingrese 0 para salir:"<<endl;
				 cin>>opcion0;
			}
	switch (opcion0)
	{
	case 1 : {
				armarhamburguesa(a,vegetales,contvege);
				break;
			 }

	case 2: {
				cout<<"falta funcion menu";// elegirmenu();
			break;
			}
	default: cout << "Eligio salir" << endl;
	}
	presentarhamburguesa(a,vegetales);

_getch();
}

void armarhamburguesa (float a[],float vegetales[],int contvege)
{
	int opcion,carne,pollo,pan,vegetaln=0,aux0,aux1=0;
	cout<<"Cual de nuestras carnes gustaria?"<<endl;
	cout<<"1. Carne de Res (100g, 200g, 300g)"<<endl;
	cout<<"2. Carne de Pollo (100g, 200g, 300g)"<<endl;
	cout<<"3. Carne de pescado (150g)"<<endl;
	cin>>opcion;
			while(opcion<0||opcion>4)
			{	 cout<<"Ingrese un numero valido del menu o ingrese 0 para salir:"<<endl;
				 cin>>opcion;
			}
	switch (opcion)
	{
	case 1:
		{
		cout<<"De cuantos gramos su filete de Res?"<<endl;
			cout<<"1. 100gr"<<endl;
			cout<<"2. 200gr"<<endl;
			cout<<"3. 300gr"<<endl;
			cin>>carne;
			switch (carne)
			{
			case 1: a[0]=1; break; // primer numero refiere a la primer pregunta, segundo numero se refiere a la eleccion.
			case 2: a[0]=2; break;
			case 3: a[0]=3; break;
			}
			break;
		}
	case 2: {
			cout<<"De cuantos gramos su filete de pollo?"<<endl;
			cout<<"1. 100gr"<<endl;
			cout<<"2. 200gr"<<endl;
			cout<<"3. 300gr"<<endl;
			cin>>pollo;
				switch (pollo)
				{
				case 1: a[0]=4; break; // primer numero refiere a la primer pregunta, segundo numero se refiere a la eleccion.
				case 2: a[0]=5; break;
				case 3: a[0]=6; break;
				}
			break;
			}
	case 3: {
			 cout<<"Eligio Filete de pescado de 150g"<<endl;
			 a[0]=7;
			break;
			}

	}
	cout<<endl<<"Que pan quiere degustar?"<<endl;
	cout<<"1. Integral"<<endl;
	cout<<"2. Clasico"<<endl;
	cin>>pan;
	switch (pan)
	{
	case 1: a[1]=1; break;
	case 2: a[1]=2; break;
	}
	
	cout<<endl<<"Tenemos una variedad de piezas a elegir, como tambien especialidades de la casa:"<<endl;
	cout<<"Escriba numero de la pieza que desea, la hamburguesa se armara en ese orden, caundo este satisfecho ingrese 0."<<endl;
	cout<<"1.Tomate A\n2.Tomate B\n3.Tomate C\n4.Lechuga A\n5.Lechuga B\n6.Pepinillos\n7.Cebolla A\n8.Cebolla B\n9.Papitas Crunch\n0.No deseo elegir mas."<<endl;
	cout<<"Deseo la pieza:"<<endl;
	cin>>vegetaln;
	vegetales[aux1]=vegetaln;
	while (!(vegetaln==0))
	{
		aux1=aux1+1;
		cout<<endl<<"siguiente pieza?: ";
		cin>>vegetaln;
			while(vegetaln<0||vegetaln>10)
			{	 cout<<"Ingrese un numero valido del menu:"<<endl;
				 cin>>vegetaln;
			}
		vegetales[aux1]=vegetaln;
	}
	cout<<"Eligio salir, habiendo elegido "<<aux1<<" piezas y";
	cout<<"las piezas elegidas fueron: ";
	while (contvege<aux1)
	{
		cout<<vegetales[contvege]<<", ";
	}

}

