void armarhamburguesa (float a[])
{
	int opcion,carne,pollo,pan,nveges;
	cout<<"Cual de nuestras carnes gustaria?"<<endl;
	cout<<"1. Carne de Res (100g, 200g, 300g)"<<endl;
	cout<<"2. Carne de Pollo (100g, 200g, 300g)"<<endl;
	cout<<"1. Carne de pescado (150g)"<<endl;
	cin>>opcion;
	switch (opcion)
	{
	case 1:
		{
		cout<<"De cuantos gramos su filete de Res?"<<endl;
			cout<<"1. 100gr"<<endl;
			cout<<"2. 200gr"<<endl;
			cout<<"3. 300gr"<<endl;
			cin>>carne;
			switch (carne)
			{
			case 1: a[0]=1; break; // primer numero refiere a la primer pregunta, segundo numero se refiere a la eleccion.
			case 2: a[0]=2; break;
			case 3: a[0]=3; break;
			}
			break;
		}
	case 2: {
			cout<<"De cuantos gramos su filete de pollo?"<<endl;
			cout<<"1. 100gr"<<endl;
			cout<<"2. 200gr"<<endl;
			cout<<"3. 300gr"<<endl;
			cin>>pollo;
				switch (pollo)
				{
				case 1: a[0]=4; break; // primer numero refiere a la primer pregunta, segundo numero se refiere a la eleccion.
				case 2: a[0]=5; break;
				case 3: a[0]=6; break;
				}
			break;
			}
	case 3: {
			 cout<<"Eligio Filete de pescado de 150g"<<endl;
			 a[0]=7;
			break;
			}

	}
	cout<<"Que pan gustaria degustar?"<<endl;
	cout<<"1. Integral"<<endl;
	cout<<"2. Clasico"<<endl;
	cin>>pan;
	switch (pan)
	{
	case 1: a[1]=1; break;
	case 2: a[1]=2; break;
	}
	
	cout<<"Cuantas piezas de vegetales?"<<endl;
	cin>>nveges;
	while ((0>nveges)||(10>nveges))
	{
		cout<<"disponemos de 10 variedades, cuantas desea?";
		cin>>nveges;
	}
	for(int i=0;i<nveges;i++)
	cout<<"escriba el numero correspondiente a los vegetales deseados";

	////////////////////////////////////////
	////////////////////////////////////
	cin>>nveges;
	switch ()
	{
		case 1: cantveg[0]=21; break; // 21=integral
		case 2: cantveg[0]=22; break; // 22=clasico
	}






			cout<<"Que vegetales en la hamburguesa?"<<endl;
			cout<<"1. Tomate Deshidratado"<<endl;
			cout<<"2. Lechuga"<<endl;
			cin>>pan;
			switch (pan)
			{
			case 1: a[0]=21; break; // 21=integral
			case 2: a[0]=22; break; // 22=clasico
			}



		}
