// PROMEDIODENOTAS.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	int registro, faltas, cont=0;
	float parcial1, parcial2, practico, final, notafinal, promedio=0;
	cout<< "Ingresar registro: ";
	cin>>registro;
	while (registro !=-999)
	{
		
		do //parcial 1
		{
			cout<<"Ingresar parcial 1: "<<endl;
			cin>> parcial1;
		}
		while ((parcial1<0) || (parcial1>100));
		do //parcial 2
		{
			cout<<"Ingresar parcial 2: "<<endl;
			cin>> parcial2;
		}
		while ((parcial2<0) || (parcial2>100));

		do //nota practica
		{
			cout<<"Ingresar nota practica: "<<endl;
			cin>> practico;
		}
		while ((practico<0) || (practico>100));

		do //final
		{
			cout<<"Ingresar final: "<<endl;
			cin>>final;
		}
		while ((final<0) || (final>100));
		do //faltas
		{			
			cout<<"Ingrese faltas: "<<endl;
			cin>>faltas;
		}
		while ((faltas<0) || (faltas>48));

		if (faltas>10)
		{			final=0;	}
		notafinal=((parcial1*0.2)+(parcial2*0.2)+(practico*0.2)+(final*0.4));
		cout<<"El alumno "<<registro<<" tiene la nota de: "<<notafinal<<endl;
		if (notafinal>=51)
		{	cout<<"Aprobado."<<endl;	}
		else
		{	cout<<"Reprobado."<<endl;	}
		cout<<"Ingresar siguiente registro: "<<endl;
		cin>>registro;
		promedio=promedio+notafinal;
		cont=cont+1;
	}
	cout<<"El Promedio del curso es: "<<promedio/cont;
	getch ();
}
